# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                 controllers.Application.index
GET     /category:id                      controllers.Application.selectCategory(id: Int)
GET     /category:categoryId/team:teamId  controllers.Application.selectTeam(categoryId: Int, teamId: Int)
GET     /hashtags                         controllers.Application.hashtags
GET     /matchCentre                      controllers.Application.matchCentre
GET     /suggestions                      controllers.Application.suggestions
GET     /about                            controllers.Application.about
GET     /admin                            controllers.Administrator.admin

# Members list (look at the default values for pagination parameters)
GET     /admin/members                    controllers.Administrator.memberList(p:Int ?= 0, s:Int ?= 2, f ?= "")
GET     /admin/members/:id                controllers.Administrator.editMember(id: Long)
GET     /admin/members/create             controllers.Administrator.createMember



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
