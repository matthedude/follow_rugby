# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                 controllers.Application.index
GET     /category:id                      controllers.Application.selectCategory(id:Int)
GET     /category:categoryId/team:teamId  controllers.Application.selectTeam(categoryId:Int, teamId:Int)
GET     /hashtags                         controllers.Application.hashtags
GET     /matchCentre                      controllers.Application.matchCentre
GET     /suggestions                      controllers.Application.suggestions
GET     /about                            controllers.Application.about
GET     /admin                            controllers.Administrator.admin

# Members list (look at the default values for pagination parameters)
GET     /admin/members                    controllers.Administrator.memberList(p:Int ?= 0, s:Int ?= 2, f ?= "")
GET     /admin/members/create             controllers.Administrator.createMember
POST    /admin/members                    controllers.Administrator.saveMember
GET     /admin/members/:id                controllers.Administrator.editMember(id:Int)
POST    /admin/members/:id                controllers.Administrator.updateMember(id:Int)
POST    /admin/members/:id/delete         controllers.Administrator.deleteMember(id:Int)

# Teams list (look at the default values for pagination parameters)
GET     /admin/team                    controllers.Administrator.teamList(p:Int ?= 0, s:Int ?= 2, f ?= "")
GET     /admin/team/create             controllers.Administrator.createTeam
POST    /admin/team                    controllers.Administrator.saveTeam
GET     /admin/team/:id                controllers.Administrator.editTeam(id:Int)
POST    /admin/team/:id                controllers.Administrator.updateTeam(id:Int)
POST    /admin/team/:id/delete         controllers.Administrator.deleteTeam(id:Int)

# Widgets list (look at the default values for pagination parameters)
GET     /admin/widget                    controllers.Administrator.widgetList(p:Int ?= 0, s:Int ?= 2, f ?= "")
GET     /admin/widget/create             controllers.Administrator.createWidget
POST    /admin/widget                    controllers.Administrator.saveWidget
GET     /admin/widget/:id                controllers.Administrator.editWidget(id:Long)
POST    /admin/widget/:id                controllers.Administrator.updateWidget(id:Long)
POST    /admin/widget/:id/delete         controllers.Administrator.deleteWidget(id:Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
