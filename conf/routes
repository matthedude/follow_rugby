# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                 controllers.Application.index
GET     /db/:categoryName                 controllers.Application.selectCategory(id:Int, categoryName: String)
GET     /db/:categoryName/:teamName       controllers.Application.selectTeam(categoryId:Int, teamId:Int, categoryName: String, teamName: String)
GET     /comingsoon                       controllers.Application.comingSoon
GET     /matchCentre/:categoryName        controllers.Application.matchCentre(id:Int, categoryName: String)
GET     /about                            controllers.Application.about
GET     /admin                            controllers.Administrator.admin


# Authentication
GET     /login                              controllers.Administrator.login
POST    /login                              controllers.Administrator.authenticate
GET     /logout                             controllers.Administrator.logout

# Members list (look at the default values for pagination parameters)
GET     /admin/members                    controllers.Members.memberList(p:Int ?= 0, s:Int ?= 2, f ?= "")
GET     /admin/members/create             controllers.Members.createMember
POST    /admin/members                    controllers.Members.saveMember
GET     /admin/members/:id                controllers.Members.editMember(id:Int)
POST    /admin/members/:id                controllers.Members.updateMember(id:Int)
POST    /admin/members/:id/delete         controllers.Members.deleteMember(id:Int)

# Teams list (look at the default values for pagination parameters)
GET     /admin/team                    controllers.Teams.teamList(p:Int ?= 0, s:Int ?= 2, f ?= "")
GET     /admin/team/create             controllers.Teams.createTeam
POST    /admin/team                    controllers.Teams.saveTeam
GET     /admin/team/:id                controllers.Teams.editTeam(id:Int)
POST    /admin/team/:id                controllers.Teams.updateTeam(id:Int)
POST    /admin/team/:id/delete         controllers.Teams.deleteTeam(id:Int)

# Widgets list (look at the default values for pagination parameters)
GET     /admin/widget                    controllers.Administrator.widgetList(p:Int ?= 0, s:Int ?= 2, f ?= "")
GET     /admin/widget/create             controllers.Administrator.createWidget
POST    /admin/widget                    controllers.Administrator.saveWidget
GET     /admin/widget/:id                controllers.Administrator.editWidget(id:Long)
POST    /admin/widget/:id                controllers.Administrator.updateWidget(id:Long)
POST    /admin/widget/:id/delete         controllers.Administrator.deleteWidget(id:Long)

# Games list (look at the default values for pagination parameters)
GET     /admin/game                               controllers.Administrator.gameList(p:Int ?= 0, s:Int ?= 2)
GET     /admin/game/create                        controllers.Administrator.createGame
POST    /admin/game                               controllers.Administrator.saveGame
GET     /admin/game/team1Id/:team2Id              controllers.Administrator.editGame(team1Id:Int, team2Id:Int)
POST    /admin/game/team1Id/:team2Id                           controllers.Administrator.updateGame(team1Id:Int, team2Id:Int)
POST    /admin/game/team1Id/:team2Id/delete                    controllers.Administrator.deleteGame(team1Id:Int, team2Id:Int)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
